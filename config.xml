<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dbangel.beta" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DBANGEL</name>
    <description>
        Platform photo sharing eksklusif antara kamu dan angel
    </description>
    <author email="contact@dbangel.asia" href="https://dbangel.asia">
        DBAngel Asia
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="./www/icon-louncer.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="./www/icon-louncer.png" />
        <resource-file src="google-services.json" target="app/google-services.json" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
